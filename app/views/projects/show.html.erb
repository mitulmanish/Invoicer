
<p> Project Name: <%= @project.name %> <p>
<p> Project default rate: <%= @project.default_rate %> </p>
<p> Company: <%= @project.company.name %> </p>

<table>
	<tbody>
		<tr>
			<th>Employee Name</th>
			<th>Date | Time</th>
			<th>Hours</th>
		</tr>
		<% @works.each do |work| %>
			<% if work.hours.nil? %>
				<tr>
				<% 3.times do %>
					<td> <%= "N/A" %> </td>
				<% end %>	
				<tr>
			<% else %>
				<tr>
					<td><%=  link_to work.employee, work.user %> </td> 
					<td><%= work.datenTime  %> </td> 
					<td><%=  work.hours_worked %> </td> 
			<% end %>
				</tr>
			<% end %>
	</tbody>
</table>

<% content_for :aside do %>
	<%= link_to "Back", projects_path %></br>
	<%= link_to "Add Company", new_project_path %>
<% end %> 