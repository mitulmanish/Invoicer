<h1> New user </h1>

<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	<div>
		<%= f.label :fname, "First Name" %>
		<%= f.text_field :fname ,:placeholder => 'Jack' %>
	</div>
	<div>
		<%= f.label :lname, "Last Name" %>
		<%= f.text_field :lname ,:placeholder => 'Black' %>
	</div>
	<div>
		<%= f.label :company_id %>
		<%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true) %>
	</div>
	
	<div>
	<%= f.submit "Create User" %>
	</div>
<% end %>