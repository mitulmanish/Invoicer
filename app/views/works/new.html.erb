<%= form_for @work , url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	
	<div>
		<%= f.label :project_id %>
		<%= f.collection_select(:project_id, Project.all, :id, :name, prompt: true) %>
	<div>
	<div>
		<%= f.label :user_id %>
		<%= f.collection_select(:user_id, User.all.order('fname','lname'), :id, :to_s, prompt: true) %>
	<div>
	<div>
		<%= f.label :datetimeperformed, " Date | Time " %>
		<%= f.datetime_select :datetimeperformed %>
	<div>
	<div>
		<%= f.label :hours %>
		<%= f.select(:hours, [1,2,3,4,5,6,7,8], prompt: true) %>
	<div>
		<%= f.submit "Create Entry" %>
	</div>
<% end %>